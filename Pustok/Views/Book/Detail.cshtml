@model Book
<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item active">@Model.Title</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<div class="container">
    <div class="row mb--60">
        <div class="col-lg-5 mb--30">
            <!-- Product Details Slider Big Image-->
            <div class="product-details-slider sb-slick-slider arrow-type-two" data-slick-setting='{
              "slidesToShow": 1,
              "arrows": false,
              "fade": true,
              "draggable": false,
              "swipe": false,
              "asNavFor": ".product-slider-nav"
              }'>
                @if(Model.BookImages != null && Model.BookImages.Any())
                {
                    @foreach(var item in Model.BookImages)
                    {
                        <div class="single-slide">
                            <img src="@item.Image" alt="@Model.Title">
                        </div>
                    }
                }
                else
                {
                    <div class="single-slide">
                        <img src="@Model.MainImage" alt="@Model.Title">
                    </div>
                }
            </div>
            <!-- Product Details Slider Nav -->
            <div class="mt--30 product-slider-nav sb-slick-slider arrow-type-two" data-slick-setting='{
            "infinite":true,
              "autoplay": true,
              "autoplaySpeed": 8000,
              "slidesToShow": 4,
              "arrows": true,
              "prevArrow":{"buttonClass": "slick-prev","iconClass":"fa fa-chevron-left"},
              "nextArrow":{"buttonClass": "slick-next","iconClass":"fa fa-chevron-right"},
              "asNavFor": ".product-details-slider",
              "focusOnSelect": true
              }'>
                @if(Model.BookImages != null && Model.BookImages.Any())
                {
                    @foreach(var item in Model.BookImages)
                    {
                        <div class="single-slide">
                            <img src="@item.Image" alt="@Model.Title">
                        </div>
                    }
                }
                else
                {
                    <div class="single-slide">
                        <img src="@Model.MainImage" alt="@Model.Title">
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-7">
            <div class="product-details-info pl-lg--30">
                <p><a href="#" class="author">@Model.Author.Name</a></p>
                <h3 class="product-title">@Model.Title</h3>
                <ul class="list-unstyled">
                    <li>Ex Tax: <span class="list-value">£@(Model.Price-((Model.Price*Model.DiscountPrice)/100))</span></li>
                    @if (Model.DiscountPrice > 0)
                    {
                        <li>Original Price: <span class="list-value"><del>£@Model.Price</del></span></li>
                        <li>Discount: <span class="list-value">@Model.DiscountPrice%</span></li>
                    }
                    <li>Genre: <span class="list-value">@Model.Genre.Name</span></li>
                    <li>Product Code: <span class="list-value">123</span></li>
                    <li>Reward Points: <span class="list-value">100</span></li>
                    <li>Stock: <span class="list-value">@(Model.InStock  ? "In Stock" : "Out of Stock")</span></li>
                </ul>
                <div class="price-block">
                    <span class="price-new">£@(Model.Price-((Model.Price*Model.DiscountPrice)/100))</span>
                    @if (Model.DiscountPrice > 0)
                    {
                        <del class="price-old">£@Model.Price</del>
                    }
                </div>
                <div class="rating-widget">
                    <div class="rating-block">
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star star_on"></span>
                        <span class="fas fa-star "></span>
                    </div>
                    <div class="review-widget">
                        <a href="">(1 Reviews)</a> <span>|</span> <a href="">Write a review</a>
                    </div>
                </div>
                <article class="product-details-article">
                    <h4 class="sr-only">Product Details Article</h4>
                    <p>@Model.Description</p>
                </article>
                <div class="add-to-cart-row">
                    <div class="count-input-block">
                        <span class="widget-label">Qty</span>
                        <input type="number" class="form-control text-center" value="1" min="1" >
                    </div>
                    <div class="add-cart-btn">
                        <a href="" class="btn btn-outlined--primary">
                            <span class="plus-icon">+</span>
                            Add to Cart
                        </a>
                    </div>
                </div>
                <div class="compare-wishlist-row">
                    <a href="" class="add-link"><i class="fas fa-heart"></i>Add to Wish List</a>
                    <a href="" class="add-link"><i class="fas fa-random"></i>Add to Compare</a>
                </div>
            </div>
        </div>
    </div>
    <div class="sb-custom-tab review-tab section-padding">
        <ul class="nav nav-tabs nav-style-2" id="myTab2" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="tab1" data-bs-toggle="tab" href="#tab-1" role="tab" aria-controls="tab-1"
                   aria-selected="true">
                    DESCRIPTION
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="tab2" data-bs-toggle="tab" href="#tab-2" role="tab" aria-controls="tab-2"
                   aria-selected="false">
                    REVIEWS (1)
                </a>
            </li>
        </ul>
        <div class="tab-content space-db--20" id="myTabContent2">
            <div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="tab1">
                <article class="review-article">
                    <h1 class="sr-only">Tab Article</h1>
                    <div class="article-body">
                        <p>@Model.Description</p>
                    </div>
                </article>
            </div>
            <div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="tab2">
                <div class="review-wrapper">
                    <h2 class="review-title">1 review for @Model.Title</h2>
                    <ul class="review-list">
                        <li class="review-item">
                            <div class="reviewer-info">
                                <div class="reviewer-thumb">
                                    <img src="image/icon/author-image.png" alt="">
                                </div>
                                <div class="reviewer-content">
                                    <div class="reviewer-header">
                                        <h3>admin </h3>
                                        <div class="rating-block">
                                            <span class="fas fa-star star_on"></span>
                                            <span class="fas fa-star star_on"></span>
                                            <span class="fas fa-star star_on"></span>
                                            <span class="fas fa-star star_on"></span>
                                            <span class="fas fa-star "></span>
                                        </div>
                                    </div>
                                    <div class="reviewer-body">
                                        <p>Great book with excellent content!</p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <h2 class="review-form-title">Add a review</h2>
                <div class="review-form">
                    <form action="#">
                        <div class="input-element">
                            <div class="rating-block">
                                <span class="fas fa-star "></span>
                                <span class="fas fa-star "></span>
                                <span class="fas fa-star "></span>
                                <span class="fas fa-star "></span>
                                <span class="fas fa-star "></span>
                                <span class="rating-text">Your Rating</span>
                            </div>
                        </div>
                        <div class="input-element">
                            <label for="review-name">Your Name</label>
                            <input id="review-name" type="text">
                        </div>
                        <div class="input-element">
                            <label for="review-comment">Your Review</label>
                            <textarea id="review-comment"></textarea>
                        </div>
                        <div class="input-element">
                            <input type="submit" value="Submit Review">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
